<div class="container-sm mt-4">
	<h1><%= @task.title %></h1>
	<p><%= @task.details %></p>
	<% if @task.completed == true %>
	<div><span style="color: green;"><i class="fas fa-check mr-3"></i></span><%= "complete" %></div>
	<% else %>
	<div><span style="color: red;"><i class="fas fa-exclamation mr-3"></i></span><%= "incomplete" %></div>
	<% end %>

	<div class="mt-3">
		<%= link_to "Delete", task_path(@task), :class => "btn btn-danger btn-large", method: :delete, data: { confirm: "Are you sure?" } %>
		<%= link_to "Update", edit_task_path, :class => "btn btn-success btn-large" %>
		<%= link_to "Back", tasks_path, :class => "btn btn-primary btn-large" %>
	</div>

</div>