<div class="container-sm mt-4">
	<h1>Task List</h1>
	<div>
		<ul class="list-group">
		  <% @tasks.each do |task| %>
		    <li class="list-group-item"><%= link_to task.title, task_path(task) %></li>
		  <% end %>
		</ul>
	</div>

	<%= link_to "Add new task", new_task_path, :class => "btn btn-success btn-large mt-3"  %>
	
</div>